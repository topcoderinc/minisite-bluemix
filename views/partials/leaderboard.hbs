{{#unless leaders}}
  <p>No results on the leaderboard at this time. Once challenges finish up the results will be posted to the leaderboard so please check back and see who climbs to the top!</p>
{{/unless}}

{{#each leaders}}

{{#if this.[0]}}
  <div class="col-sm-4 inner-bottom-sm inner-left inner-right">
    <figure class="member">
      <div class="icon-overlay icn-link">
        <a href="http://www.topcoder.com/member-profile/{{this.[0].handle}}"><img src="{{this.[0].pic}}" class="img-circle"></a>
      </div><!-- /.icon-overlay -->
      <figcaption>
        <h2>{{this.[0].handle}}<span>{{this.[0].score}}pts</span></h2>
      </figcaption>
    </figure>
  </div><!-- /.col -->
{{/if}}

{{#if this.[1]}}
